<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:backgroundTint="@color/green"
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@drawable/logo" />

        <ImageButton
            android:id="@+id/klasifikasi"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/klasifikasi"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="-58dp"
            android:layout_centerInParent="true"
            android:text="Klasifikasi"
            android:textSize="25sp"
            android:textColor="@color/font"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/kasus"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="230dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/kasus"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="165dp"
            android:layout_centerInParent="true"
            android:text="Kasus"
            android:textSize="25sp"
            android:textColor="@color/font"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/pengetahuan"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="115dp"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/pengetahuan"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="25dp"
            android:layout_centerInParent="true"
            android:text="Pengetahuan"
            android:textSize="25sp"
            android:textColor="@color/font"
            android:textStyle="bold"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>