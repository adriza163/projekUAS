                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"
                    android:text="Memberi makanan daging kepada hewan herbivora"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kasus4"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:layout_constraintTop_toBottomOf="@+id/kasus3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background1"
                app:cardCornerRadius="18dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/sapi"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Kasus 4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"
                    android:text="Memberi makanan daging kepada hewan herbivora"/>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kasus5"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/kasus4"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background1"
            app:cardCornerRadius="18dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/sapi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Kasus 4"/>
