<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".HalamanKasus">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        tools:context=".HalamanPengetahuan" >
        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Studi Kasus"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
    
        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="24dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/kasus1"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/kasus"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:layout_constraintTop_toBottomOf="@+id/image"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/background1"
                app:cardCornerRadius="18dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kasuskucing"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="Kesalahan Pemilihan Makanan pada kucing"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="50dp"
                    android:textSize="12sp"
                    android:text="Oleh Rian Ardi Wibowo di Pekanbaru (2023)"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kasus2"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:layout_constraintTop_toBottomOf="@+id/kasus"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background1"
                app:cardCornerRadius="18dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kasuskelinci"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="Dampak Pemberian Daging pada Kelinci"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="45dp"
                    android:textSize="12sp"
                    android:text="Oleh Olvy Olivia di Pekanbaru (2022)"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kasus3"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:layout_constraintTop_toBottomOf="@+id/kasus2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background1"
                app:cardCornerRadius="18dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kasusherbivora"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="Kesalahan pemberian makanan pada hewan Herbivora"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="45dp"
                    android:textSize="12sp"
                    android:text="Oleh Pak Heriadi di Kebun binatang Pekanbaru (2021)"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kasus4"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:layout_constraintTop_toBottomOf="@+id/kasus3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background1"
                app:cardCornerRadius="18dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/kasusburung"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="Kesalahan Pemberian Makanan pada Burung"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="55dp"
                    android:textSize="12sp"
                    android:text="Taman Burung (2019)"/>
            </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>