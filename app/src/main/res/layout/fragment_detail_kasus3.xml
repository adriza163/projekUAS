<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green"
    tools:context=".DetailKasus3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="135dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="160dp"
        android:text="Kasus 1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="80dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:background="@drawable/herbi"
            android:scaleType="centerCrop"
            android:src="@drawable/sapi" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Seekor sapi mati akibat diberi makanan yang tidak sesuai dengan dietnya. Badak putih umumnya merupakan herbivora pemakan rumput, tetapi disalahpahami saat diberikan makanan yang mengandung bahan-bahan yang tidak sesuai dengan sistem pencernaan mereka. Pemberian makanan yang tidak sesuai menyebabkan gangguan pencernaan yang serius dan berujung pada kematian hewan tersebut."
                android:textStyle="bold"
                android:textSize="13sp"
                android:justificationMode="inter_word">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>