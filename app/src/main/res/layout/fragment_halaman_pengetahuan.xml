<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".HalamanPengetahuan" >

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pengetahuan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="24dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/pengetahuan2"
        app:layout_constraintTop_toBottomOf="@id/judul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pengetahuan"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background1"
            app:cardCornerRadius="18dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/herbi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Herbivora"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="Herbivora merupakan jenis he......"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pengetahuan2"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/pengetahuan"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background1"
            app:cardCornerRadius="18dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/karni"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Karnivora"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="kelompok hewan pemakan da...... "/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pengetahuan3"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/pengetahuan2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background1"
            app:cardCornerRadius="18dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/omni"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Omnivora"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="hewan pemakan segala. Dari tu..... "/>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>